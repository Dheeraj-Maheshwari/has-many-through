<%= nested_form_for @user do |f| %>
 <%=f.label :first%>
 <%=f.text_field :first%>
 <%=f.label :last%>
 <%=f.text_field :last%>
 <%=f.label :email%>
 <%=f.text_field :email%>
 <%= f.fields_for :buses do |bus_form| %>
 <%= bus_form.text_field :bus %>
 <%= bus_form.link_to_remove "Remove this bus" %>

 <% end %>
    <p><%= f.link_to_add "Add a Bus", :buses %></p>
    <%=f.submit%>
  <%end%>